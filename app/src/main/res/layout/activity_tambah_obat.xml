<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TambahObatActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="402dp"
        android:layout_height="156dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/logo_obat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="524dp"
        android:background="@drawable/rectangle_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.326">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/Jenis_Obat"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:text="Nama Obat"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ED_NamaObat"
            android:layout_width="366dp"
            android:layout_height="54dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_textview"
            android:ems="10"
            android:hint="Omaprazol"
            android:inputType="text"
            android:paddingLeft="15dp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:text="Stok Obat"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ED_Stok"
            android:layout_width="366dp"
            android:layout_height="54dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_textview"
            android:ems="10"
            android:hint="30"
            android:inputType="text"
            android:paddingLeft="15dp"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:text="Dosis"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ED_Dosis"
            android:layout_width="366dp"
            android:layout_height="54dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_textview"
            android:ems="10"
            android:hint="20mg"
            android:inputType="text"
            android:paddingLeft="15dp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/biru"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>