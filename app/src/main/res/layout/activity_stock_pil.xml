<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    tools:context=".stock_pilActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="408dp"
        android:layout_height="229dp"
        android:src="@drawable/pil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="44dp"
        android:layout_height="35dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.079" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="415dp"
        android:layout_height="506dp"
        android:background="@drawable/rectangle_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.898">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="538dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="178dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="Pil Name"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.091" />

            <EditText
                android:id="@+id/ED_tableName"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_textview"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:text="Ripamcimin"
                android:textColor="@color/abu"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="0.031" />

            <EditText
                android:id="@+id/ED_tableName2"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_textview"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:text="20"
                android:textColor="@color/abu"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13"
                app:layout_constraintVertical_bias="0.063" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="162dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="Dosis"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.636"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.091" />

            <EditText
                android:id="@+id/ED_dosis"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_textview"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:text="20 mg"
                android:textColor="@color/abu"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.655"
                app:layout_constraintStart_toEndOf="@+id/ED_tableName"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="0.031" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="178dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Stock"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ED_tableName"
                app:layout_constraintVertical_bias="0.192" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="Time"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.605"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/ED_tableName"
                app:layout_constraintVertical_bias="0.19" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_textview"
                android:ems="10"
                android:gravity="center"
                android:inputType="time"
                android:text="06:30 Am"
                android:textColor="@color/abu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.686"
                app:layout_constraintStart_toEndOf="@+id/ED_tableName2"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:layout_constraintVertical_bias="0.068" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>